{
    "name": "chaplean/unit-bundle",
    "license": "MIT",
    "type": "symfony-bundle",
    "description": "Contains utilities for functional and unit tests",
    "authors": [
        {
            "name": "Chaplean",
            "homepage": "http://www.chaplean.coop"
        }
    ],
    "autoload": {
        "psr-4": {
            "Chaplean\\Bundle\\UnitBundle\\": "",
            "Foo\\Bundle\\FooBundle\\": ""
        }
    },
    "repositories": [
        {
            "type": "composer",
            "url": "https://satis.chaplean.coop"
        }
    ],
    "require": {
        "php": ">=7.0.8",
        "doctrine/doctrine-bundle": "~1.4",
        "doctrine/doctrine-fixtures-bundle": "~2.2",
        "doctrine/orm": "^2.4",
        "liip/functional-test-bundle": "^1.8",
        "mockery/mockery": "dev-master",
        "nelmio/alice": "^2.3",
        "php-mock/php-mock": "^2.0",
        "phpunit/phpunit": "^6.2",
        "symfony/config": "^2.8 || ^3.0 || ^4.0",
        "symfony/console": "^2.8 || ^3.0 || ^4.0",
        "symfony/yaml": "^2.8 || ^3.0 || ^4.0"
    },
    "require-dev": {
        "chaplean/coding-standard": "^1.1",
        "chaplean/mailer-bundle": "^3.0",
        "friendsofsymfony/rest-bundle": "^2.0",
        "jms/serializer-bundle": "^2.0",
        "satooshi/php-coveralls": "dev-master",
        "symfony/monolog-bundle": "^2.8 || ^3.0 || ^4.0",
        "symfony/var-dumper": "^2.8 || ^3.0 || ^4.0"
    },
    "scripts": {
        "post-install-cmd": [
            "Sensio\\Bundle\\DistributionBundle\\Composer\\ScriptHandler::buildBootstrap",
            "Sensio\\Bundle\\DistributionBundle\\Composer\\ScriptHandler::clearCache",
            "Sensio\\Bundle\\DistributionBundle\\Composer\\ScriptHandler::installRequirementsFile"
        ],
        "post-update-cmd": [
            "Sensio\\Bundle\\DistributionBundle\\Composer\\ScriptHandler::buildBootstrap",
            "Sensio\\Bundle\\DistributionBundle\\Composer\\ScriptHandler::clearCache",
            "Sensio\\Bundle\\DistributionBundle\\Composer\\ScriptHandler::installRequirementsFile"
        ]
    },
    "config": {
        "bin-dir": "bin",
        "platform": {
            "php": "7.0.8"
        }
    },
    "extra": {
        "symfony-app-dir": "app",
        "symfony-bin-dir": "bin",
        "symfony-var-dir": "var",
        "symfony-web-dir": "web",
        "symfony-assets-install": "relative"
    }
}
